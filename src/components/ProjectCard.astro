---
const{project}=Astro.props
import { Github} from '@lucide/astro';
---

<div class="rounded-lg border bg-[#0a0a0a] text-[#ffffff] shadow-sm overflow-hidden">
  <div class="relative aspect-video">
    <a href={project.url}target="_blank" rel="noopener noreferrer">
  <img
    src={project.image}
    alt={project.alt}
    class="object-cover transition-transform hover:scale-105"
    style="width: 600px; height: 250px"
  />
</a>
  </div>
  <main class="p-4">
    <h3 class="font-semibold text-xl mb-2">{project.title}</h3>
    <p class="text-sm text-[#b3b3b3] mb-4">{project.description}</p>
    <div class="flex flex-wrap gap-2">
       {project.tags.map((tag: unknown): any => <span
        class="inline-flex items-center rounded-md bg-[#1e1e1e] px-2 py-1 text-xs font-medium ring-1 ring-inset ring-gray-500/10"
      >
        { tag }
      </span>)}
    </div>
  </main>
   <footer class="p-4 pt-0">
    <a
      href={project.link}
      target="_blank"
      class="inline-flex items-center gap-2 text-sm hover:underline"
    >
      <Github class="h-4 w-4"></Github>
      View on GitHub
    </a>
  </footer>
</div>
